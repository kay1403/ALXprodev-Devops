#!/bin/bash

mkdir -p pokemon_data
pokemon_list=(bulbasaur ivysaur venusaur charmander charmeleon)

for name in "${pokemon_list[@]}"; do
  echo "Fetching data for $name..."
  success=false

  for attempt in {1..3}; do
    response=$(curl -s -w "%{http_code}" -o "pokemon_data/${name}.json" "https://pokeapi.co/api/v2/pokemon/$name")
    if [[ "$response" -eq 200 ]]; then
      echo "Saved data to pokemon_data/${name}.json âœ…"
      success=true
      break
    else
      echo "Attempt $attempt failed for $name (status $response). Retrying..."
      sleep 1
    fi
  done

  if ! $success; then
    echo "[$(date)] Failed to fetch data for $name after 3 attempts" >> errors.txt
    rm -f "pokemon_data/${name}.json"
  fi

  sleep 1
done
